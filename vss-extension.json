{
  "branding": {
    "color": "rgb(32, 68, 134)",
    "theme": "dark"
  },
  "categories": ["Azure Pipelines"],
  "content": {
    "details": {
      "path": "README.md"
    }
  },
  "contributions": [
    {
      "id": "#{task_id}#",
      "properties": {
        "name": "#{task_name}#"
      },
      "targets": ["ms.vss-distributed-task.tasks"],
      "type": "ms.vss-distributed-task.task"
    }
  ],
  "description": "MegaLinter extension for Azure DevOps",
  "files": [
    {
      "addressable": true,
      "path": ".assets"
    },
    {
      "path": "megalinter"
    }
  ],
  "icons": {
    "default": ".assets/extension-icon.png"
  },
  "id": "#{public_extensionId}#",
  "manifestVersion": 1,
  "name": "#{public_extensionName}#",
  "publisher": "#{publisherId}#",
  "tags": ["sast"],
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "version": "#{version}#"
}
