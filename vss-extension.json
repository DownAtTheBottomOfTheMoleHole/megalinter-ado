{
  "branding": {
    "color": "rgb(32, 68, 134)",
    "theme": "dark"
  },
  "categories": ["Azure Pipelines"],
  "content": {
    "details": {
      "path": "README.md"
    },
    "license": {
      "path": "LICENSE.md"
    }
  },
  "contributions": [
    {
      "id": "#{task_id}#",
      "properties": {
        "name": "#{task_name}#"
      },
      "targets": ["ms.vss-distributed-task.tasks"],
      "type": "ms.vss-distributed-task.task"
    }
  ],
  "description": "MegaLinter extension for Azure DevOps",
  "files": [
    {
      "addressable": true,
      "path": ".assets"
    },
    {
      "path": "megalinter"
    }
  ],
  "icons": {
    "default": ".assets/extension-icon.png"
  },
  "id": "#{public_extensionId}#",
  "links": {
    "repository": {
      "type": "git",
      "uri": "https://github.com/DownAtTheBottomOfTheMoleHole/megalinter-ado"
    },
    "issues": {
      "uri": "https://github.com/DownAtTheBottomOfTheMoleHole/megalinter-ado/issues"
    },
    "support": {
      "uri": "https://github.com/DownAtTheBottomOfTheMoleHole/megalinter-ado/issues"
    },
    "getstarted": {
      "uri": "https://github.com/DownAtTheBottomOfTheMoleHole/megalinter-ado#quick-start"
    },
    "license": {
      "uri": "https://github.com/DownAtTheBottomOfTheMoleHole/megalinter-ado/blob/main/LICENSE.md"
    }
  },
  "manifestVersion": 1,
  "name": "#{public_extensionName}#",
  "publisher": "#{publisherId}#",
  "tags": ["sast", "linter", "code-quality", "megalinter", "devops", "ci-cd"],
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "version": "#{version}#"
}
