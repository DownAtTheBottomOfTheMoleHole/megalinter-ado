{
  "name": "megalinter-ado",
  "version": "1.0.0",
  "description": "MegaLinter Azure DevOps Extension",
  "author": "DownAtTheBottomOfTheMoleHole",
  "dependencies": {
    "azure-pipelines-task-lib": "5.2.6",
    "mega-linter-runner": "9.3.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "12.6.0",
    "@eslint/js": "9.39.2",
    "@types/mocha": "10.0.10",
    "@types/node": "25.2.3",
    "@types/q": "1.5.8",
    "@types/sinon": "21.0.0",
    "eslint": "9.39.2",
    "nyc": "17.1.0",
    "prettier": "3.8.1",
    "sinon": "21.0.1",
    "ts-node": "10.9.2",
    "typescript": "5.9.3",
    "typescript-eslint": "8.55.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/DownAtTheBottomOfTheMoleHole/megalinter-ado.git"
  },
  "scripts": {
    "audit": "npm audit",
    "build": "cd megalinter && tsc",
    "clean": "rm -rf node_modules/ && rm -rf build/",
    "coverage": "nyc npm test",
    "format": "prettier --write .",
    "lint": "eslint .",
    "posttest": "npm run coverage",
    "pretest": "npm run lint",
    "test": "cucumber-js --config megalinter/cucumber.js"
